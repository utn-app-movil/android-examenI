<!-- activity_email_detail.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/background_light">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalles del Correo Electrónico"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <!-- Título del correo electrónico -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/EmailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:paddingEnd="8dp"/>

            <TextView
                android:id="@+id/txtDetailTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:padding="8dp"
                android:layout_marginBottom="4dp"

                android:elevation="1dp"/>
        </TableRow>

        <!-- Mensaje del correo electrónico -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/EmailMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:paddingEnd="8dp"/>

            <TextView
                android:id="@+id/txtDetailMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:padding="8dp"
                android:layout_marginBottom="4dp"
                android:background="@android:color/white"
                android:elevation="1dp"/>
        </TableRow>

        <!-- Fecha de envío del correo electrónico -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/EmailSendDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:paddingEnd="8dp"/>

            <TextView
                android:id="@+id/txtDetailSendDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:padding="8dp"
                android:layout_marginBottom="4dp"
                android:background="@android:color/white"
                android:elevation="1dp"/>
        </TableRow>

        <!-- CC (con copia) del correo electrónico -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/EmailCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:paddingEnd="8dp"/>

            <TextView
                android:id="@+id/txtDetailCc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:padding="8dp"
                android:layout_marginBottom="4dp"
                android:background="@android:color/white"
                android:elevation="1dp"/>
        </TableRow>

        <!-- CCO (con copia oculta) del correo electrónico -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/EmailBCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:paddingEnd="8dp"/>

            <TextView
                android:id="@+id/txtDetailCco"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:padding="8dp"
                android:layout_marginBottom="4dp"
                android:background="@android:color/white"
                android:elevation="1dp"/>
        </TableRow>

    </TableLayout>

</LinearLayout>
