<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/rec_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/rec_hint_name"
        android:minHeight="48dp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/rec_edit_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/rec_hint_last_name"
        android:minHeight="48dp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/rec_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/rec_hint_phone"
        android:inputType="phone"
        android:minHeight="48dp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/rec_edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/rec_hint_email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/rec_edit_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/rec_hint_address"
        android:minHeight="48dp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/rec_edit_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/rec_hint_country"
        android:minHeight="48dp"
        android:padding="8dp" />

    <!-- Spinner para seleccionar el rol de interÃ©s -->
    <Spinner
        android:id="@+id/rec_spinner_roles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:prompt="@string/rec_role_prompt" />

    <Button
        android:id="@+id/rec_button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rec_button_save" />
</LinearLayout>
