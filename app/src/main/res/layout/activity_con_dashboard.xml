<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Título de la actividad -->
    <TextView
        android:id="@+id/con_contributionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contribution Dashboard"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <!-- Contenedor para las contribuciones -->
    <ScrollView
        android:id="@+id/con_scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/con_contributionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Aquí se agregarán las contribuciones dinámicamente -->

        </LinearLayout>
    </ScrollView>

    <!-- Botón de salir o regresar -->
    <Button
        android:id="@+id/con_exitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:layout_marginTop="16dp" />

</LinearLayout>
