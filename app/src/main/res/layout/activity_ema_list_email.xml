<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ema_EmailActivity">

    <!-- Encabezado -->

    <!-- Contenedor para el contenido del formulario -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="64dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ema_idperson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/EmailContactId">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPersonaId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ema_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/EmailSendDate">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextFechaEnvio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ema_cc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/EmailCC">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextCC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ema_cco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/EmailBCC">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextCCO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ema_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/EmailSubject">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ema_mess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/EmailMessage">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:minLines="3" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <!-- RecyclerView para mostrar la lista de correos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEmails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ema_mess"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        tools:ignore="NotSibling" />
    >

</androidx.constraintlayout.widget.ConstraintLayout>
